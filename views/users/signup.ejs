<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUp</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mt-2">
            <label for="username" class="form-label">UserName</label>
            <input name="username" id="username" placeholder="Enter Username" type="text" class="form-control" required> <!--Here We are creating the listing object that will store the values of every entitie in key value pair only-->
            <div class="valid-feedback">Looks Good!</div>
            <br>
        </div>
        <div>
            <label for="email" class="form-label">Email</label>
            <input name="email" id="email" placeholder="Enter email" type="email" class="form-control" required> <!--Here We are creating the listing object that will store the values of every entitie in key value pair only-->
            <div class="valid-feedback">Looks Good!</div>
            <br>
        </div>
        <div>
            <label for="password" class="form-label">Password</label>
            <input name="password" id="password" placeholder="Enter Password" type="password" class="form-control" required> <!--Here We are creating the listing object that will store the values of every entitie in key value pair only-->
            <div class="valid-feedback">Looks Good!</div>
            <br>
        </div>

        <button class="btn btn-success">SignUp</button>
        </form>
    </div>
 </div>