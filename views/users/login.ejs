<% layout('/layouts/boilerplate') %>
<div class="row mt-3">
    <h1 class="col-6 offset-3">Login</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
        <div class="mt-4">
            <label for="username" class="form-label">UserName</label>
            <input name="username" id="username" placeholder="Enter Username" type="text" class="form-control" required> <!--Here We are creating the listing object that will store the values of every entitie in key value pair only-->
            
        </div>
        <div class="mt-4">
            <label for="password" class="form-label">Password</label>
            <input name="password" id="password" placeholder="Enter Password" type="password" class="form-control" required> 
        </div>

        <button class="btn btn-success mt-4">SignUp</button>
        </form>
    </div>
 </div>