<% layout('layouts/boilerplate') %> <!--This file path now use are using that file <html> tags -->
<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listing) %>; //stringify to convert data in correct format
    console.log(listing);
</script>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2><b><%= listing.title %></b> <br></h2>
        </div>
    <div class="card col-6 offset-2 listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
            <p class="card-text">Owned By: <b><i><%= listing.owner.username %></i></p></b>
                
                <p><%= listing.description %> <br></p>
                <p>Price:  &#8377; <%= listing.price.toLocaleString("en-IN") %> <br></p>
                Location:  <%= listing.location %> <br>
                country:  <%= listing.country %>
            </p>
        </div>
    </div>
    <br>
    
    </div>

    <% if(currentUser && currentUser._id.equals(listing.owner._id)) { %> <!--Checkin if currentuser is owner of following list if yes then only show edit and delete button-->
    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-2 create-btn">Edit</a>
        

        <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-dark  offset-4">Delete</button>
        </form>
    </div>
    <% } %>

  
    
    <div class="col-8 offset-2 mb-3">
        
        <% if(currentUser) { %>
        <hr/>
        <h4>Leave a Review</h4>
        <form action="/listing/<%= listing.id %>/review" method="post" novalidate class="needs-validation">
            <!-- <div class="mb-3 mt-3">
                
                <input id="rating" type="range" min="0" max="5" step="1" name="review[review]" class="form-range">
            </div> -->
            <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
            <fieldset class="starability-slot">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[review]" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[review]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[review]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[review]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[review]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[review]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
            </div>

            <div class="mb-3 mt-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea id="comment" cols="30" rows="4" name="review[comment]" class="form-control" required ></textarea>
                <div class="invalid-feedback">Enter Comment</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
        <% } %>

        <hr>
        <% if(listing.review.length > 0) { %> <!--If Review are present only then show All review -->
        <h4>All Reviews</h4>
        <div class="row">
            <% for( rating of listing.review) { %>
            <div class="card col-5 ms-3 mb-3"> 
                <div class="card-body">
                    <h5 class="card-title mt-2">@<%= rating.author.username %></h5>
                    <p class="starability-result card-text" data-rating="<%= rating.review %>"></p>
                    <p class="card-text"><b>Comment:</b><%= rating.comment %></p>
                    
                </div>
                <form method="post" action="/listing/<%= listing._id %>/review/<%= rating._id %>?_method=DELETE">
                    <br><button class="btn btn-dark mb-2 btn-sm">Delete</button>
                </form>
            </div>
        <% } %>
        </div>
        <% } %>
    </div>

    <div class="col-8 offset-2 mb-3">
        <h3>Where You'll be</h3>
        <div id="map">
        </div>
    </div>

    <script src="/js/map.js"></script>



